{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run vercel-build"
      }
    },
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": ".vercel/output/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/server/index.js" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { 
      "src": "/(.*)", 
      "dest": "/index.html", 
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }
    }
  ]
}