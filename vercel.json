{
  "version": 2,
  "buildCommand": "node build.js",
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/build/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/server/index.js" },
    { "src": "/(.*)", "dest": "client/build/index.html", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" } }
  ]
}