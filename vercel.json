{
  "version": 2,
  "builds": [
    {
      "src": "dist/server/**/*.[tj]s",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**/*.js", "tsconfig.json", "server/**/*.ts", "shared/**/*.ts"],
        "buildCommand": "npm run build:api && npm run build"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}